<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- WanderSync -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WanderSync"
            android:textSize="50sp"
            android:textColor="@color/lightBlue"
            android:fontFamily="@font/silvertones"
            android:layout_marginBottom="200dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="20dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Create an Account Tit -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an Account"
                android:textSize="40sp"
                android:textColor="#29445e"
                android:fontFamily="@font/coolvetica"
                android:layout_marginBottom="25dp"
                />

            <!-- email -->
            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:layout_marginBottom="16dp" />

            <!-- password -->
            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginBottom="24dp" />

            <!-- create button -->
            <Button
                android:id="@+id/createButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Create"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/bluegray"
                />

            <!-- create account button -->
            <TextView
                android:id="@+id/createAccountButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have an account? Click here"
                android:backgroundTint="@color/bluegray"
                android:fontFamily="@font/coolvetica"
                android:textSize="18sp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/exitButton"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/lightBluegray"
            android:text="Exit"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>